# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /					         								controllers.Application.index()
GET		/DisciplinesManager/maximoDeCreditos						controllers.Application.maximoDeCreditosPorPeriodo()
POST 	/DisciplinesManager/:nome/:periodo/alocaDisciplina			controllers.Application.alocarDisciplina(nome:String, periodo:Int)
POST 	/DisciplinesManager/:nome/:periodo/desalocaDisciplina		controllers.Application.desalocarDisciplina(nome:String, periodo:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)